<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.fujimiya.mediaux.MainActivity"
        android:orientation="vertical"
        android:background="@color/bg"
        android:id="@+id/ll">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:onClick="kotawisata"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/kotawisata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:onClick="bumuokusel"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/bumiokusel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:onClick="kederat"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/kederat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:onClick="ombaiakas"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ombaiakas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:onClick="lagudaerahokusel"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/lagudaerahokusel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:onClick="muaradua"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/muaradua"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>